<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Maurice.Views.ReporteMensual"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Maurice.Views" 
    xmlns:views="using:Maurice.Views.Shared"
    Width="500">

    <!-- Pass the Page's DataContext to the BaseReporteView -->
    <views:BaseReporte DataContext="{Binding}">
        <views:BaseReporte.PeriodSelection>
            <ComboBox 
                ItemsSource="{Binding AvailableMonths}"
                DisplayMemberPath="Name"
                SelectedValuePath="Value"
                SelectedValue="{Binding SelectedMonth, Mode=TwoWay}"
                SelectionChanged="MonthComboBox_SelectionChanged"
                Width="120"
                Margin="0,0,0,0"
                PlaceholderText="Mes"/>
        </views:BaseReporte.PeriodSelection>
    </views:BaseReporte>
</Page>
