<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Maurice.Views.ReporteAnual"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Maurice.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid 
        HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="125"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
        Text="Reporte Anual" 
        FontSize="20" 
        FontWeight="Bold" 
        Margin="10,20,0,10" 
        Grid.Row="0"
        Grid.ColumnSpan="3"
        HorizontalAlignment="Center"/>

        <TextBlock
        Text="Seleccione el Año para generar el reporte:" 
        FontSize="16" 
        Margin="10,0,0,0" 
        Grid.Row="1"
        Grid.Column="0"
        Grid.ColumnSpan="3"
        HorizontalAlignment="Left"/>

        <TextBlock
        Text="Total de ingresos" 
        FontSize="14" 
        FontWeight="SemiBold" 
        Margin="0,0,0,0" 
        Grid.Row="2"
        Grid.Column="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>

        <TextBlock
        Text="$200"
        FontSize="14" 
        Margin="10,0,0,0" 
        Grid.Row="2"
        Grid.Column="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"/>

        <TextBlock
        Text="Total de Egresos" 
        FontSize="14" 
        FontWeight="SemiBold" 
        Margin="10,0,0,0" 
        Grid.Row="2"
        Grid.Column="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>

        <TextBlock
        Text="$200"
        FontSize="14" 
        Margin="10,0,0,0" 
        Grid.Row="2"
        Grid.Column="3"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"/>

        <TextBlock
        Text="Total de facturas" 
        FontSize="14" 
        FontWeight="SemiBold" 
        Margin="0,0,0,0" 
        Grid.Row="3"
        Grid.Column="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>

        <TextBlock
        Text="5"
        FontSize="14" 
        Margin="10,0,0,0" 
        Grid.Row="3"
        Grid.Column="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"/>

        <TextBlock
        Text="Impuestos pagados" 
        FontSize="14" 
        FontWeight="SemiBold" 
        Margin="0,0,0,0" 
        Grid.Row="3"
        Grid.Column="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>

        <TextBlock
        Text="$80"
        FontSize="14" 
        Margin="10,0,0,0" 
        Grid.Row="3"
        Grid.Column="3"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"/>

        <!--Date Picker-->
        <ComboBox 
            x:Name="YearComboBox" 
            Width="100" 
            Margin="20,0,0,0"
            Grid.Column="3"
            Grid.Row="1"
            PlaceholderText="Año">
            <!-- Populate years dynamically in code-behind -->
        </ComboBox>

        <ListView 
            ItemsSource="{Binding TestData}"
            Margin="0,20,0,0"
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            MaxHeight="400">

            <ListView.Header>
                <Grid Background="{ThemeResource SubtleFillColorSecondaryBrush}" Padding="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="UUID" FontWeight="Bold"/>
                    <TextBlock Text="Folio" FontWeight="Bold" Grid.Column="1"/>
                    <TextBlock Text="Fecha" FontWeight="Bold" Grid.Column="2"/>
                    <TextBlock Text="Total" FontWeight="Bold" Grid.Column="3"/>
                    <TextBlock Text="Estado" FontWeight="Bold" Grid.Column="4"/>
                </Grid>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding UUID}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Folio}" Grid.Column="1"/>
                        <TextBlock Text="{Binding Date}" Grid.Column="2"/>
                        <TextBlock Text="{Binding Total}" Grid.Column="3"/>
                        <TextBlock Text="{Binding Status}" Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
