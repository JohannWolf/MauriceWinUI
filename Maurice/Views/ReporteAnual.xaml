<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Maurice.Views.ReporteAnual"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Maurice.Views" 
    xmlns:views="using:Maurice.Views.Shared"
    Width="500">

    <!-- Pass the Page's DataContext to the BaseReporteView -->
    <views:BaseReporte DataContext="{Binding}">
        <views:BaseReporte.PeriodSelection>
            <ComboBox 
                ItemsSource="{Binding AvailableYears}"
                SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
                SelectionChanged="YearComboBox_SelectionChanged"
                Margin="0,0,0,0"
                Width="120"
                PlaceholderText="AÃ±o"/>
        </views:BaseReporte.PeriodSelection>
    </views:BaseReporte>
</Page>