<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Maurice.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Maurice.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="240"/>
        </Grid.RowDefinitions>
        
        <!--Title-->
        <TextBlock
            Text="Dashboard"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"/>

        <!--#region Personal data -->
        <Border 
            Margin="15,0,0,0"
            Grid.Row="1" 
            CornerRadius="10"
            BorderBrush="Black" 
            BorderThickness="1">    
            <Grid Background="#495057">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!--Section Title-->
                <TextBlock
                    Margin="5"
                    Text="Juan Jose Nava"
                   FontSize="16"
                    FontWeight="Bold"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Left"/>
                <!--List-->
                <ListView  
                    ItemsSource="{Binding ReportResult}"
                    Margin="0"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    MaxHeight="150">

                    <ListView.Header>
                        <Grid Background="{ThemeResource SubtleFillColorSecondaryBrush}" Padding="3,0,3,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Regimen" FontWeight="Bold" Margin="3,0,0,0"/>
                            <TextBlock Text="Obligaciones" FontWeight="Bold" Grid.Column="1"/>
                        </Grid>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Regimen}" FontWeight="SemiBold" Margin="-8,0,0,0" />
                                <TextBlock Text="{Binding Obligacion}" Grid.Column="1"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Resumen mensual -->
        <Border 
            Margin="15,10,0,0"
            Grid.Row="2" 
            CornerRadius="10"
            BorderBrush="Black" 
            BorderThickness="1">
            <Grid Background="#495057">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="195"/>
                    <ColumnDefinition Width="195"/>
                    <ColumnDefinition Width="195"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <!--Section Title-->
                <TextBlock
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Resumen Mensual"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"/>
                <!--Income-->
                <TextBlock
                    Margin="5,0,0,0"
                    Text="Ingresos"
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"/>
                <TextBlock
                    Margin="5,0,0,0"
                    Text="$1000"
                    Foreground="#38b000"
                    FontWeight="Bold"
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Center"/>
                <!--Expense-->
                <TextBlock
                    Text="Egreso"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center"/>
                <TextBlock
                    Text="$600"
                    Foreground="#d62828"
                    FontWeight="Bold"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Center"/>
                <!--Balance-->
                <TextBlock
                    Text="Balance"
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Center"/>
                <TextBlock
                    Text="$400"
                    Foreground="#4895ef"
                    FontWeight="Bold"
                    Grid.Row="2"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Recently added -->
        <Border 
            Margin="15,10,0,0"
            Grid.Row="3" 
            CornerRadius="10"
            BorderBrush="Black" 
            BorderThickness="1">    
            <Grid Background="#495057">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <!--Section Title-->
                <TextBlock
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="AÃ±adidos recientemente"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"/>
                <!--List-->
                <ListView  
                    ItemsSource="{Binding ReportResult}"
                    Margin="0"
                    Grid.Row="1"
                    Grid.Column="0"
                    MaxHeight="300">

                    <ListView.Header>
                        <Grid Background="{ThemeResource SubtleFillColorSecondaryBrush}" Padding="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="RFC" FontWeight="Bold"/>
                            <TextBlock Text="Folio" FontWeight="Bold" Grid.Column="1"/>
                            <TextBlock Text="Fecha" FontWeight="Bold" Grid.Column="2"/>
                            <TextBlock Text="Total" FontWeight="Bold" Grid.Column="3"/>
                            <TextBlock Text="Tipo" FontWeight="Bold" Grid.Column="4"/>
                        </Grid>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding RfcEmisor}" FontWeight="SemiBold" Margin="-8,0,0,0" />
                                <TextBlock Text="{Binding Folio}" Grid.Column="1"/>
                                <TextBlock Text="{Binding Fecha, Converter={StaticResource StringFormatConverter},ConverterParameter='{}{0:dd/MM/yyyy}'}" Grid.Column="2"/>
                                <TextBlock Text="{Binding Total,Converter={StaticResource CurrencyConverter}}" Grid.Column="3"/>
                                <TextBlock Text="{Binding TipoDeDocumento}" Grid.Column="4"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        <!--#endregion-->
        
        <!--#region Acciones rapidas-->
        <Border 
            Margin="15,0,15,0"
            Grid.Row="3" 
            Grid.Column="1"
            CornerRadius="10"
            BorderBrush="Black" 
            BorderThickness="1">
            <Grid Background="#495057">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Section Title-->
                <TextBlock
                    Margin="5"
                    Text="Acciones rapidas"
                    FontSize="16"
                    FontWeight="Bold"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"/>
                <!--Buttons section-->
                <StackPanel
                    Margin="15,10,0,0"
                    Grid.Row="1">
                    <Button 
                        Background="#495057"
                        BorderBrush="#495057">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="Find"/>
                                <TextBlock Margin="5,0,0,0">Buscar Factura</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button 
                        Background="#495057"
                        BorderBrush="#495057">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Add"/>
                                <TextBlock Margin="5,0,0,0">Agregar Factura</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button 
                        Background="#495057"
                        BorderBrush="#495057">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="CalendarWeek"/>
                                <TextBlock Margin="5,0,0,0">Reporte Mensual</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button 
                        Background="#495057"
                        BorderBrush="#495057">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Calendar"/>
                                <TextBlock Margin="5,0,0,0">Reporte Anual</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</Page>
