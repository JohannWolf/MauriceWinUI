<Page x:Class="Maurice.Views.AgregarFactura"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Maurice.Views"
      xmlns:core="using:Maurice.Core"  
      AllowDrop="True"
      Drop="Page_Drop"
      DragOver="Page_DragOver">

    <Grid>
        <Border Background="{ThemeResource CardBackgroundFillColorDefault}"
                CornerRadius="8"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Spacing="16" HorizontalAlignment="Center">
                <!-- File drop area -->
                <Border x:Name="DropArea"
                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                        CornerRadius="4"
                        BorderThickness="2"
                        BorderBrush="{ThemeResource DividerStrokeColorDefault}"
                        Padding="40"
                        AllowDrop="True">

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Page" HorizontalAlignment="Center"/>
                        <TextBlock Text="Arrastra archivos XML aquÃ­" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="o" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,4,0,0"
                                   Foreground="{ThemeResource TextFillColorSecondary}"/>
                        <Button Content="Seleccionar archivos" 
                                Click="SelectFilesButton_Click"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Status message -->
                <TextBlock x:Name="StatusText" 
                           Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>