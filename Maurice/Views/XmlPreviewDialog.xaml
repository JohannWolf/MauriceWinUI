<ContentDialog x:Class="Maurice.Views.XmlPreviewDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:display="using:Maurice.Core.Models"
               Title="Revisar datos del comprobante"
               PrimaryButtonText="Guardar"
               SecondaryButtonText="Cancelar"
               DefaultButton="Primary"
               MaxWidth="800"
                MaxHeight="600">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <!-- Header info -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefault}" 
                    CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding Tipo}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Folio}" Grid.Row="1" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Fecha}" Grid.Row="2" Foreground="Gray"/>

                    <TextBlock Text="{Binding Total}" Grid.Column="1" Grid.RowSpan="3" 
                               FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Detailed fields -->
            <TextBlock Text="Detalles:" FontWeight="Bold" Margin="0,0,0,8"/>

            <ListView ItemsSource="{Binding Campos}" 
                      MaxHeight="300"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="display:DisplayField">
                        <Grid Padding="8" MinHeight="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Nombre}" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Valor}" 
                                       Grid.Column="1" 
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <!-- Optional: Add grouping by category -->
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Key}" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="8,16,8,8"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>